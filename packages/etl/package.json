{
  "name": "@packages/etl",
  "description": "XLS ETL",
  "repository": {
    "type": "git",
    "url": "https://github.com/teehemkay/mff"
  },
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./constants": "./constants.js"
  },
  "author": "webmaster@europarl.europa.eu",
  "license": "ISC",
  "scripts": {
    "export": "./export-all.js"
  },
  "devDependencies": {
    "debug": "^4.3.7",
    "fs-extra": "^11.2.0",
    "marked": "^15.0.3",
    "prettier": "^3.4.1",
    "typescript": "^5.8.2",
    "xo": "^0.60.0",
    "yaml": "^2.6.1"
  },
  "prettier": {
    "useTabs": false,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "browserslist": ["defaults", "not IE 11"],
  "xo": {
    "space": true,
    "prettier": true,
    "envs": ["node", "browser"],
    "rules": {
      "capitalized-comments": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "always-and-inside-groups",
          "warnOnUnassignedImports": true
        }
      ],
      "func-names": ["error", "as-needed"],
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": ["#__PURE__"]
        }
      ],
      "unicorn/no-array-reduce": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-object-from-entries": "off"
    },
    "ignores": ["_vendor/**"]
  }
}
