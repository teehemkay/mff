---
import { kHowItWorks, kOurRole } from '@packages/etl/constants';

import Head from '../components/Head.astro';
import ShortcutWai from '../components/ShortcutWai.astro';
import Navigation from '../components/NavigationNoLanguageSwitcher.astro';
import Footer from '../components/Footer.astro';

interface Props {
  lang: string;
  currentPage: string;
  currentFAQ: string | null;
}

const { lang, currentPage, currentFAQ } = Astro.props;
---

<!doctype html>
<html lang="en" class="no-js">
  <head>
    <Head {lang} {currentPage} {currentFAQ} />
  </head>
  <body>
    <ShortcutWai {lang} />
    <Navigation {lang} {currentPage} {currentFAQ} />

    {/* Main page content goes here */}
    <slot />

    <Footer {lang} />

    {/* Common Scripts */}
    {/*
    <script type="module" is:inline src="/assets/js/go-to-top.js"></script>
    */}

    <script type="module" is:inline src="/assets/js/dropdown-menu.js"></script>

    {
      [kHowItWorks, kOurRole].includes(currentPage) && (
        <script type="module" is:inline src="/assets/js/expand-collapse.js" />

        <script
          type="module"
          is:inline
          src="/assets/js/copy-url-to-clipboard.js"
        />
      )
    }

    {
      currentFAQ && (
        <script
          type="module"
          is:inline
          src="/assets/js/scroll-faq-into-view.js"
        />
      )
    }

  </body>
</html>
