---
import { languages, metadata, pageLabels } from '@packages/data';

import Head from '../components/Head.astro';
import ShortcutWai from '../components/ShortcutWai.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  lang: string;
  currentPage: string;
}

const { lang, currentPage } = Astro.props;

const { mainNav, menu, openMenu, closeMenu, epLogoAltText } = metadata(lang);

const pageMenuProps = { mainNav, menu, openMenu, closeMenu };

const languageMenuProps = {
  lang,
  languages,
  switchLanguage: metadata(lang).switchLanguage,
};

const props = {
  lang,
  currentPage,
  languages,
  epLogoAltText,
  pageLabels: pageLabels(lang),
  headerProps: { pageMenuProps, languageMenuProps },
};
---

<!doctype html>
<html lang="en" class="no-js">
  <head>
    <Head {lang} {currentPage} />
  </head>
  <body>
    <ShortcutWai {lang} />
    <Navigation {lang} {currentPage} />

    {/* Main page content goes here */}
    <slot />

    <Footer />

    {/* Common Scripts */}
    <script is:inline src="/assets/js/go-to-top.js"></script>
    <script is:inline src="/assets/js/menu-desktop.js"></script>
    <script is:inline src="/assets/js/menu-mobile.js"></script>
    <script is:inline src="/assets/js/dropdown-desktop.js"></script>
    {/* Add other common script references here if identified */}
  </body>
</html>
