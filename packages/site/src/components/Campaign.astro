---
interface Props {
  lang: string;
  altText: string;
  url: string;
  label: string;
}
const { lang, altText, url, label } = Astro.props;
---

<!-- CAMPAIGN block -->
<div
  class="block lg:flex flex-col md:block sm:block block max-w-5xl mx-auto mt-0 mb-16 px-4">
  <div class="campaign-block border border-2 border-[LightGray] p-16">
    <img
      src={`/assets/img/banners/mff_${lang}.svg`}
      alt=""
      class="w-full max-w-[700px]"
    />
    <a
      href={url}
      class="flex items-center decoration-blue-default !no-underline mt-6">
      <span
        class="text-base sm:text-[1.25rem] lg:text-2xl font-EPGammaBold text-black-default hover:!underline focus:!underline inline mr-2"
        >{label}</span
      ><span class="inline-block min-w[25px]"
        ><svg
          focusable="false"
          aria-hidden="true"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          class="fill-black-default w-[20px] sm:w-[30px] lg:w-[40px]"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        ></span
      >
    </a>
  </div>
</div>
