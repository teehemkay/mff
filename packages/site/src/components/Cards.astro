---
export interface CardProps {
  cards: string[][];
}
---

<!-- CARDS -->
<ul
  class="elections-block lg:grid lg:grid-cols-2 md:block sm:block block max-w-5xl mx-auto mb-10 px-4">
  {
    Astro.props.cards.map(([label, url, text], index) => (
      <li class={`${index === 0 ? 'lg:mr-5 ' : ''}mb-6`}>
        <h2 class="text-2-xl font-EPGammaBold flex items-center py-2">
          <a href={url} class="block decoration-blue-default">
            <>
              <span class="inline mr-2">{label}</span>
              <span class="inline-block min-w[25px]">
                <svg
                  focusable="false"
                  aria-hidden="true"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                  width="25"
                  class="fill-blue-default">
                  <path
                    fill-rule="evenodd"
                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"
                  />
                </svg>
              </span>
            </>
          </a>
        </h2>
        <p class="text-lg">{text}</p>
      </li>
    ))
  }
</ul>
