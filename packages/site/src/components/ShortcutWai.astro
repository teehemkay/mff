---
interface Props {
  lang: string;
}

import { meta } from '../js/utils.js';

const { lang } = Astro.props;
const { skipToLanguageMenu, skipToMainContent } = meta(lang);
---

<!-- Shortcut for Screen-readers -->
<nav aria-label="Shortcut menu">
  <ul class="wai-nav">
    <li>
      <a href="#lang-menu" class="skip-main">{skipToLanguageMenu}</a>
    </li>
    <li>
      <a href="#mainContent" class="skip-main">{skipToMainContent}</a>
    </li>
  </ul>
</nav>
